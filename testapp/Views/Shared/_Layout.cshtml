<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Angular")
    @Styles.Render("~/Content/Angular2")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("RazorDem", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Angular", "Index", "AngularData")
                @Html.ActionLink("Angular2", "Index", "AngularData2")
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>Razor AppDemo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Angular2")
    @Scripts.Render("~/bundles/Angular")
    @RenderSection("scripts", required: false)
</body>
</html>
